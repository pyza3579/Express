{{#if isError}}
  <div class="isError">You can't leave any of forms empty!</div>
{{/if}}
{{#if isSent}}
  <div class="isSent">The message has been sent! File {{ image }} has been saved </div> 
{{/if}}

<form action="/contact/send-message" method="POST" enctype="multipart/form-data"> 
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
    <label>
    Project design: <input type="file" name="image" accept="image/*">
  </label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>



 
